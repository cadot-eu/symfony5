zend_extension=xdebug

[xdebug]
xdebug.mode=develop,debug
xdebug.client_host= { \
            echo "[xdebug]"; \
            echo "zend_extension=$(find /usr/lib/php/ -name xdebug.so)"; \
            echo "xdebug.mode=debug"; \
            echo "xdebug.start_with_request=yes"; \
            echo "xdebug.client_host=host.docker.internal"; \
            echo "xdebug.client_port=9001"; \
        } >> /etc/php/7.4/mods-available/xdebug.ini; \
xdebug.start_with_request=yes
zend_extension=xdebug.so
#Replace host.docker.internal to your computers IP address if linux
#xdebug.client_host=zend_extension=/usr/local/lib/php/extensions/no-debug-non-zts-20160303/xdebug.so
